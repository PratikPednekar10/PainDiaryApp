<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainlogoHome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:src="@drawable/logopg" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bungee_regular"
                android:text="Pain Diary Application"
                android:textColor="#FBC02D"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/imgp" />

            <TextView
                android:id="@+id/tvWeatherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bungee_regular"
                android:paddingTop="10dp"
                android:text="Weather Information"
                android:textColor="#FBC02D"
                android:textSize="26dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/r1MainW"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#C1FFC107">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bungee_regular"
                    android:text="City"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Humidity"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHumidity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pressure"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imgIconW"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="256dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="35dp"
                    android:src="@drawable/weather" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgIconW"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="3Â°"
                    android:textColor="#ffff"
                    android:textSize="30sp" />


            </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>