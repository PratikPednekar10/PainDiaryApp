<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1566e0"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainlogoHome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:src="@drawable/logopd" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bungee_regular"
                android:text="Pain Diary Application"
                android:textColor="#FF9800"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/imgp" />

            <TextView
                android:id="@+id/tvWeatherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bungee_regular"
                android:paddingTop="10dp"
                android:text="Weather Information"
                android:textColor="#FF9800"
                android:textSize="20dp" />

            <RelativeLayout
                android:id="@+id/r1MainW"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FF9800">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/bungee_regular"
                    android:text="City"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCity"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Humidity"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHumidity"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pressure"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imgIconW"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="256dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="35dp"
                    android:src="@drawable/weather" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgIconW"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="51dp"
                    android:text="3Â°"
                    android:textColor="#ffff"
                    android:textSize="60dp" />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>