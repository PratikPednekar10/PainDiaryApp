<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_recordCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:inputType="date"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cr_date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_painLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_mood"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_painIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_painLoc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_stepGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_painIntensity"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_stepGoals"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_humd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_temp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/row_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_humd"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#1976D2" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>